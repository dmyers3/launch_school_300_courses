<div class="row">
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: 'post'  do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <br/>
    <% end %>
    <%= pluralize(post.total_votes, "vote") %>
    <br/>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: 'post'  do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
  </div>
  
  <div class="span8 well">
    <%= render post.categories %>
    <h4><%= link_to post.title, format_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">posted by</span> <%= link_to post.creator.username, user_path(post.creator) %>
      <small>
        on <%= format_date(post.created_at) %>
      </small>
    </p>
    <small>
      <span><%= link_to("#{pluralize(post.comments.size, 'comment')}", post_path(post)) %></span>
    </small>
  </div>
</div>